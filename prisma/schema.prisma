generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Modelo de Usuario
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  admin     Boolean  @default(false)
  picture   String   @default("https://res.cloudinary.com/dylkeqcms/image/upload/v1762125098/default_uqhrk3.jpg")
  email     String   @unique
  name      String
  password  String
  twofa     Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modelo de Aplicacao
model Application {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  hash        String   @unique
  ownerId     String   @db.ObjectId
  title       String
  appTag      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
